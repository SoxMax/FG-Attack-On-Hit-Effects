<?xml version="1.0" encoding="iso-8859-1"?>

<root>
    <!-- weapon effects subwindow -->
    <windowclass name="weapon_effects_subwindow">
        <margins control="0,0,2,2" />
        <sheetdata>
            <anchor_column name="columnanchor" />
            <!-- effects -->
            <header_column name="header_effects">
                <static textres="header_effects" />
                <center />
            </header_column>
            <button_iedit name="effects_iedit">
                <anchored to="header_effects" position="insidetopright" offset="-5,0" />
                <target>effects_list</target>
            </button_iedit>
            <button_iadd name="effects_list_iadd">
                <anchored to="effects_iedit" position="lefthigh" offset="5,0" />
                <target>effects_list</target>
            </button_iadd>

            <list_editor_weapon_effects name="effects_list">
            </list_editor_weapon_effects>
            <!-- end weapon effects entry -->
        </sheetdata>
    </windowclass>

    <!-- weapon effect settings -->
    <windowclass name="weapon_effects_entry">
        <margins control="0,2,0,2" />
        <script file="utility/scripts/weapon_effects_entry.lua" />
        <sheetdata>
            <genericcontrol name="rightanchor">
                <anchored width="0" height="0">
                    <top offset="5" />
                    <right />
                </anchored>
                <invisible />
            </genericcontrol>
            <genericcontrol name="leftanchor">
                <anchored width="0" height="0">
                    <top offset="5" />
                    <left />
                </anchored>
                <invisible />
            </genericcontrol>

            <!-- editor button -->
            <buttoncontrol name="effectdetail">
                <anchored to="rightanchor" width="20" height="20">
                    <top />
                    <right anchor="left" relation="relative" />
                </anchored>
                <state icon="button_details" pressed="button_details_down" />
                <script>
					function onButtonPress()
                        local w = Interface.openWindow("weapon_effect_editor", window.getDatabaseNode());
                        w.main.subwindow.name.setValue(DB.getValue(window.getDatabaseNode(), "...name", ""));
					end
                </script>
            </buttoncontrol>

            <!-- delete button if in edit mode -->
            <button_idelete name="idelete">
                <anchored width="20" height="20">
                    <top parent="effectdetail" anchor="top"/>
                    <right parent="effectdetail" anchor="left" relation="relative"/>
                </anchored>
            </button_idelete>

            <hs name="name"/>
            <basicstring name="effect_description">
                <script>
                    function onClickDown(button, x, y)
                        local w = Interface.openWindow("weapon_effect_editor", window.getDatabaseNode());
                        w.main.subwindow.name.setValue(DB.getValue(window.getDatabaseNode(), "...name", ""));
                        return true;
                    end
                </script>
                <multilinespacing>20</multilinespacing>
                <anchored to="leftanchor">
                    <top />
                    <left anchor="right" relation="relative" offset="5" />
                    <right parent="rightanchor" anchor="left" relation="relative" offset="-20" />
                </anchored>
                <readonly />
            </basicstring>

        </sheetdata>
    </windowclass>

    <!-- weapon effect edit window -->
    <windowclass name="weapon_effect_editor">
        <frame>charsheethelper</frame>
        <placement>
            <size width="350" height="400" />
        </placement>
        <sizelimits>
            <minimum width="350" height="350" />
            <dynamic />
        </sizelimits>
        <nodelete />
        <playercontrol />
        <minimize>minimized_char</minimize>
        <tooltip control="name" />
        <sheetdata>
            <windowtitlebar name="title">
                <resource>power_title_effect</resource>
            </windowtitlebar>
            <anchor_title_charsheethelper name="contentanchor" />

            <genericcontrol name="contentframe">
                <anchored to="contentanchor">
                    <top anchor="bottom" offset="0" />
                    <left />
                    <right />
                    <bottom parent="" offset="-30" />
                </anchored>
            </genericcontrol>

            <subwindow_record name="main">
                <class>weapon_effect_editor_main</class>
                <activate />
                <fastinit />
            </subwindow_record>

            <scrollbar_record>
                <target>main</target>
            </scrollbar_record>

            <resize_charsheethelper />
            <close_charsheethelper />
        </sheetdata>
    </windowclass>

    <windowclass name="weapon_effect_editor_main">
        <script file="utility/scripts/weapon_effects_editor.lua" />
        <sheetdata>
            <anchor_column name="columnanchor" />

            <label_column name="name_label">
                <static textres="power_label_name" />
            </label_column>
            <stringcontrol name="name">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="97" />
                    <right offset="-5" />
                </anchored>
                <multilinespacing>20</multilinespacing>
                <font>sheettext</font>
                <readonly />
            </stringcontrol>

            <!-- show/hide effect -->
            <label_column>
                <static textres="item_label_effect_visible" />
                <tooltip textres="item_label_effect_visible_tooltip" />
            </label_column>

            <button_stringcycler name="visibility">
                <anchored width="60" height="20">
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="97" />
                </anchored>
                <parameters>
                    <defaultlabelres>dash</defaultlabelres>
                    <labelsres>item_label_effects_hide|item_label_effects_show</labelsres>
                    <values>hide|show</values>
                </parameters>
                <tooltip textres="item_label_effect_visible_tooltip" />
            </button_stringcycler>

            <!-- critical hit effect cycler here -->
            <label_column name="critonly_label">
                <static textres="item_label_effect_critonly" />
                <tooltip textres="item_label_effect_critonly_tooltip" />
            </label_column>

            <buttonfield name="critonly">
                <anchored width="60" height="20">
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="97" />
                </anchored>
                <frame name="fielddark" offset="7,5,7,5" hidereadonly = "true" />
                <stateframe>
                    <hover name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
                </stateframe>
                <state textres="no" />
                <state textres="yes" />
            </buttonfield>


            <header_column name="header_label">
                <static textres="power_header_effect" />
                <center />
            </header_column>

            <!-- effect type cycler here -->
            <label_column name="type_label">
                <static textres="power_label_type" />
                <tooltip textres="power_label_type_tooltip" />
            </label_column>

            <cycler_effecttypes name="type">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="97" />
                    <right offset="-110" />
                </anchored>
            </cycler_effecttypes>

            <!-- effect / label -->
            <string_column_full name="effect" />

            <!-- effect is a label only -->
            <string_column_full name="label_only" />

            <!-- SAVE types -->
            <cycler_savetypes name="save_type">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="5" />
                    <right offset="-250" />
                </anchored>
                <tooltip textres="item_save_type_tooltip" />
            </cycler_savetypes>

            <cycler_saves name="save">
                <anchored to="save_type" position="righthigh" offset="10,0" width="70" height="20"/>
                <tooltip textres="item_label_save_type_tooltip" />
            </cycler_saves>

            <weapon_effect_number name="save_modifier">
                <anchored to="save" position="righthigh" offset="10,0" width="20" height="20"/>
                <tooltip textres="item_label_save_value_tooltip" />
            </weapon_effect_number>

            <combobox_bonus_types name="save_bonus_type">
                <anchored to="save_modifier" position="righthigh" offset="10,0" width="100" height="20"/>
            </combobox_bonus_types>

            <!-- ability version -->
            <cycler_abilitytypes name="ability_type">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="5" />
                    <right offset="-230" />
                </anchored>
                <tooltip textres="item_ability_type_tooltip" />
            </cycler_abilitytypes>

            <cycler_ability_short name="ability">
                <anchored to="ability_type" position="righthigh" offset="10,0" width="80" height="20"/>
            </cycler_ability_short>

            <cycler_ability_long name="ability_check">
                <anchored to="ability_type" position="righthigh" offset="10,0" width="80" height="20"/>
            </cycler_ability_long>

            <weapon_effect_number name="ability_modifier">
                <anchored to="ability" position="righthigh" offset="10,0" width="20" height="20"/>
            </weapon_effect_number>

            <combobox_bonus_types name="ability_bonus_type">
                <anchored to="ability_modifier" position="righthigh" offset="10,0" width="100" height="20"/>
            </combobox_bonus_types>

            <!-- Susceptiblity version -->
            <cycler_susceptiblitytypes name="susceptiblity_type">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="5" />
                    <right offset="-230" />
                </anchored>
                <tooltip textres="item_ability_type_tooltip" />
            </cycler_susceptiblitytypes>

            <combobox_damage_types name="susceptiblity">
                <anchored to="susceptiblity_type" position="righthigh" offset="10,0" width="80" height="20"/>
            </combobox_damage_types>

            <weapon_effect_number name="susceptiblity_modifier">
                <anchored to="susceptiblity" position="righthigh" offset="10,0" width="20" height="20"/>
            </weapon_effect_number>

            <!-- misc version -->
            <cycler_misctypes name="misc_type">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="5" />
                    <right offset="-230" />
                </anchored>
                <tooltip textres="effect_label_misc_type_tooltip" />
            </cycler_misctypes>

            <weapon_effect_number name="misc_modifier">
                <anchored to="misc_type" position="righthigh" offset="10,0" width="20" height="20"/>
                <tooltip textres="effect_label_misc_value_tooltip" />
            </weapon_effect_number>

            <combobox_bonus_types name="misc_bonus_type">
                <anchored to="misc_modifier" position="righthigh" offset="10,0" width="100" height="20"/>
            </combobox_bonus_types>

            <!-- duration header-->
            <header_column name="header_duration">
                <static textres="power_header_effect_duration" />
                <center />
            </header_column>

            <!-- duration dice -->
            <basicdice name="durdice">
                <anchored width="60" height="20">
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="17" />
                    <left offset="5" />
                </anchored>
                <hideonvalue value="0" />
                <tooltip textres="power_label_duration_dice_tooltip" />
            </basicdice>
            <label_fieldtop>
                <anchored to="durdice" />
                <static textres="item_label_effects_dice" />
                <tooltip textres="item_effects_dice_tooltip" />
            </label_fieldtop>

            <label name="label_plus">
                <anchored to="durdice" position="righthigh" offset="5,0" width="10" />
                <static>+</static>
                <center />
            </label>

            <!-- duration modifier -->
            <basicnumber name="durmod">
                <anchored to="label_plus" position="righthigh" offset="5,0" width="30" height="20" />
                <tooltip textres="power_label_duration_mod_tooltip" />
                <hideonvalue>0</hideonvalue>
            </basicnumber>
            <label_fieldtop>
                <anchored to="durmod" />
                <static textres="text_MOD" />
                <tooltip textres="item_label_effects_mod_tooltip" />
            </label_fieldtop>

            <!-- duration unit -->
            <button_stringcycler name="durunit">
                <anchored to="durmod" position="righthigh" offset="10,0" width="40" height="20" />
                <parameters>
                    <defaultlabelres>effect_label_durunitrnd</defaultlabelres>
                    <labelsres>effect_label_durunitmin|effect_label_durunithr|effect_label_durunitday</labelsres>
                    <values>minute|hour|day</values>
                </parameters>
            </button_stringcycler>
            <label_fieldtop>
                <anchored to="durunit" />
                <static textres="item_label_effects_unit" />
                <tooltip textres="item_label_effects_unit_tooltip" />
            </label_fieldtop>


            <!-- save header-->
            <header_column name="header_save">
                <static textres="power_header_cast_save" />
                <center />
            </header_column>
            <button_stringcycler name="savetype">
                <anchored width="50">
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres>power_label_savetypenone</defaultlabelres>
                    <labelsres>power_label_savetypefort|power_label_savetyperef|power_label_savetypewill</labelsres>
                    <values>fortitude|reflex|will</values>
                </parameters>
            </button_stringcycler>
            <label name="savedclabel">
                <anchored to="savetype" position="righthigh" offset="10,0" width="15" />
                <static textres="dc" />
            </label>
            <basicnumber name="savedcmod">
                <anchored to="savedclabel" position="righthigh" offset="10,0" width="30" height="20" />
                <hideonvalue value="0" />
            </basicnumber>

            <!-- tags header-->
            <header_column name="header_othertags">
                <static textres="power_label_othertags" />
                <center />
                <invisible />
            </header_column>
            <string_column_full name="othertags">
                <invisible />
            </string_column_full>

        </sheetdata>
    </windowclass>

    <!-- new effect edit window work -->

</root>